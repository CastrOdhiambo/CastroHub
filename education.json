<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Education - CastroHub</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Poppins', sans-serif; }
    .card:hover { transform: translateY(-5px); transition: all 0.3s; }
    .active-filter { background-color: #fbbf24; color: #1f2937; }
  </style>
</head>
<body class="bg-gray-50 text-gray-900 flex flex-col min-h-screen">

  <!-- Navbar -->
  <header class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white shadow-lg">
    <div class="container mx-auto flex justify-between items-center py-4 px-6 flex-wrap">
      <h1 class="text-2xl font-bold tracking-wide">CastroHub</h1>
      <button id="menuToggle" class="block md:hidden text-white text-2xl focus:outline-none">&#9776;</button>
      <nav id="navMenu" class="hidden md:flex flex-wrap w-full md:w-auto mt-4 md:mt-0">
        <ul class="flex flex-col md:flex-row md:space-x-6 gap-2 md:gap-0">
          <li><a href="index.html" class="hover:text-yellow-300">Home</a></li>
          <li><a href="about.html" class="hover:text-yellow-300">About</a></li>
          <li><a href="news.html" class="hover:text-yellow-300">News</a></li>
          <li><a href="entertainment.html" class="hover:text-yellow-300">Entertainment</a></li>
          <li><a href="education.html" class="font-semibold text-yellow-300">Education</a></li>
          <li><a href="projects.html" class="hover:text-yellow-300">Projects</a></li>
          <li><a href="mindspark.html" class="hover:text-yellow-300">MindSpark TV</a></li>
          <li><a href="contact.html" class="hover:text-yellow-300">Contact</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="bg-blue-50 py-16 text-center">
    <h2 class="text-5xl font-bold text-blue-700 mb-4">Education Resources</h2>
    <p class="text-lg md:text-xl max-w-2xl mx-auto">Access notes, past papers, projects, and revision materials across various subjects.</p>
  </section>

  <!-- Filters & Search -->
  <section class="container mx-auto px-6 mt-10">
    <div class="flex flex-col md:flex-row justify-between items-center bg-white p-4 rounded-lg shadow flex-wrap gap-4">
      <div class="flex flex-wrap gap-2">
        <button class="filter-btn px-4 py-2 rounded-lg active-filter" data-category="all">All</button>
        <button class="filter-btn px-4 py-2 rounded-lg" data-category="Notes">Notes</button>
        <button class="filter-btn px-4 py-2 rounded-lg" data-category="Exams">Exams</button>
        <button class="filter-btn px-4 py-2 rounded-lg" data-category="Projects">Projects</button>
        <button class="filter-btn px-4 py-2 rounded-lg" data-category="Educational">Educational</button>
      </div>
      <div class="mt-4 md:mt-0">
        <input id="resourceSearch" type="text" placeholder="Search resources..." 
               class="border rounded px-3 py-2 w-64 focus:ring-2 focus:ring-yellow-400 focus:outline-none">
      </div>
    </div>
  </section>

  <!-- Resource Grid -->
  <section class="container mx-auto px-6 mt-8 grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4" id="resourceGrid">
    <!-- Resources loaded dynamically -->
  </section>

  <!-- Footer -->
  <footer class="bg-gray-900 text-gray-300 py-6 mt-auto text-center">
    <p>&copy; 2025 CastroHub. All rights reserved.</p>
  </footer>

  <!-- Scripts -->
  <script>
    // Toggle mobile menu
    const menuToggle = document.getElementById('menuToggle');
    const navMenu = document.getElementById('navMenu');
    menuToggle.addEventListener('click', () => {
      navMenu.classList.toggle('hidden');
    });

    // Load JSON data
    fetch('education.json')
      .then(res => res.json())
      .then(data => {
        const grid = document.getElementById('resourceGrid');
        data.resources.forEach(resource => {
          grid.innerHTML += `
            <div class="card bg-white rounded-lg shadow p-4" data-category="${resource.category}">
              <h3 class="text-lg font-semibold">${resource.title}</h3>
              <span class="text-xs px-2 py-1 rounded-full font-semibold bg-blue-100 text-blue-700">${resource.category}</span>
              <p class="text-gray-600 mt-2 mb-3">${resource.description}</p>
              <a href="${resource.link}" class="text-indigo-600 font-semibold hover:underline" target="_blank">Open â†’</a>
            </div>
          `;
        });

        // Filters
        const filterBtns = document.querySelectorAll('.filter-btn');
        const cards = document.querySelectorAll('.card');
        const searchInput = document.getElementById('resourceSearch');

        filterBtns.forEach(btn => {
          btn.addEventListener('click', () => {
            document.querySelector('.active-filter').classList.remove('active-filter');
            btn.classList.add('active-filter');
            const category = btn.dataset.category;
            cards.forEach(card => {
              card.style.display = (category === 'all' || card.dataset.category === category) ? 'block' : 'none';
            });
          });
        });

        // Search
        searchInput.addEventListener('input', () => {
          const query = searchInput.value.toLowerCase();
          cards.forEach(card => {
            card.style.display = card.innerText.toLowerCase().includes(query) ? 'block' : 'none';
          });
        });
      })
      .catch(err => console.error("Error loading resources:", err));
  </script>
</body>
</html>
